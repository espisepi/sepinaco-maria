	<style name="chromakey" chroma="0x00ff00" chromathreshold="0.1" />
	
	<scene name="scene_cabina" title="cabina" onstart="" thumburl="panos/cabina.tiles/thumb.jpg" lat="" lng="" alt="" heading="">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/cabina.tiles/preview.jpg" />

		<image>
			<cube url="panos/cabina.tiles/pano_%s.jpg" />
		</image>

		<hotspot name="movil"
               url="recursos/imagen/movil.png"
               ath="109.7919914725201" atv="12.684660758666018" scale="0.6349999999999999" rx="0" ry="0" rz="0"
